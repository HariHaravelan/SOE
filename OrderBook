using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace StockOrderExecution
{
    class OrderBook
    {
        private static Dictionary<string, int> dictOrderBook = new Dictionary<string, int>(StringComparer.OrdinalIgnoreCase);

    


        public bool HasCompanyAvailable(string _mcompanyName)
        {
            return dictOrderBook.ContainsKey(_mcompanyName);
        }


        public int AvailableStocks(string _mcompanyName)
        {
            return dictOrderBook[_mcompanyName];
        }


        public void UpdateOrderBook(string _mcompanyName, int _mquantity)
        {
            if (dictOrderBook.ContainsKey(_mcompanyName))
            {
                dictOrderBook[_mcompanyName] = _mquantity;
         
            }
            else
            {
                dictOrderBook.Add(_mcompanyName, _mquantity);
               
            }
        }

    }
}
